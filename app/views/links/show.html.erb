<div class="jumbotron" style="font-size: 3em;">
<button class="btn btn-default btn-xs" style="float:right"><%= link_to "Back to Links", links_path %></button>
  <a href= <%= "'" + @link.url + "'"%> > <%= @link.description %></a><br>
</div>
<h6 id="content">
  <%= @link.url.gsub(/(http:\/\/ *)()/, "") %>
</h6>
<div class="container" id="content">

<p>
  <%= form_for Comment.new do |f| %>
    <%= f.text_field :text %>
    <%= f.hidden_field :commentable_id, :value => @link.id %>
    <%= f.hidden_field :commentable_type, :value => @link.class %>
    <%= f.submit  'add comment', :class => "btn btn-default" %>
  <% end %>    
</p>
<br>
<ul>
  <% @link.comments.each do |comment| %>
    <%= render "layouts/comments", :comment => comment %>
  <% end %>
</ul>
</div>

